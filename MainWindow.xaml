<Window x:Class="UCD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCD.controls"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="500" Width="800">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="MainPanel" Orientation="Horizontal" Grid.Row="1">
            <Border x:Name="HomeSection" Width="800" Background="LightBlue">
                <local:Home/>
            </Border>
            <Border x:Name="MathSection" Width="800" Background="LightGreen">
                <local:Math/>
            </Border>
            <Border Width="800" Background="LightGreen">
                <local:Informatiques/>
            </Border>
            <Border Width="800" Background="LightGreen">
                <local:Physique/>
            </Border>
            <Border Width="800" Background="LightGreen">
                <TextBlock Text="Chemie" FontSize="64"/>
            </Border>
            <Border Width="800" Background="LightGreen">
                <TextBlock Text="Biologie" FontSize="64"/>
            </Border>
        </StackPanel>


    </Grid>


</Window>
